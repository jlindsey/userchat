source 'http://rubygems.org'

gem 'rails', '3.1.0.rc6'

gem 'jquery-rails'
gem 'haml'
gem 'omniauth', "~> 0.2.6"
gem 'nokogiri', "~> 1.4.0"
gem 'cancan', "~> 1.6.5"

group :development do
  gem 'sqlite3', "~> 1.3"
  gem 'rails-sh', "~> 1.4"
  gem 'ZenTest', "~> 4.6"
  gem 'autotest-rails'
end

group :development, :test do
  gem 'rspec-rails', "~> 2.4"
end

group :test do
  gem 'capybara', "~> 1.0"
  gem 'factory_girl_rails', "~> 1.1"
end

group :production do
  gem 'mysql2'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails', "~> 3.1.0.rc"
  gem 'coffee-rails', "~> 3.1.0.rc"
  gem 'uglifier'
end
